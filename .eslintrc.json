{
  "extends": ["airbnb-base"],
  "rules": {
    "no-underscore-dangle": "off",
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "env": {
        "browser": true
      }
    },
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["cypress/**/*.js"],
      "env": {
        "mocha": true
      },
      "globals": {
        "Cypress": "readonly",
        "cy": "readonly",
        "expect": "readonly"
      }
    },
    {
      "files": [
        "gulpfile.js",
        "metalsmith.js",
        "gulp/**/*.js",
        "lib/**/*.js"
      ],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}
