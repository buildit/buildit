
{
  "title": "buildit @ wipro digital",
  "description": "buildit@wiprodigital",
  "envs": {
    "local-dev": {
      "url": "http://localhost:8080",
      "excludeRobots": true
    },
    "local-dev-min": {
      "url": "http://localhost:8080",
      "excludeRobots": true
    },
    "staging": {
      "url": "https://www-staging.buildit.digital",
      "excludeRobots": true,
      "googleAnalyticsTrackingId": "UA-78138413-6"
    },
    "production": {
      "url": "https://buildit.wiprodigital.com",
      "excludeRobots": false,
      "googleAnalyticsTrackingId": "UA-78138413-2"
    }
  },
  "paths": {
    "styles": {
      "src": [ "src/sass/**/*.scss" ],
      "dest": "dist/styles/"
    },
    "scripts": {
      "main": "src/scripts/main.js",
      "modules": ["src/scripts/**/*.js", "!src/scripts/**/*.test.js"],
      "src": "src/scripts/",
      "dest": "dist/scripts/"
    },
    "images": {
      "src": "static/**/*.{jpg,png,svg}",
      "dest": "dist"
    },
    "pages": {
      "src": "pages/**/*",
      "dest": "dist/"
    },
    "templates": {
      "src": "templates/",
      "partials": "partials/"
    },
    "assets": {
      "src": [
        "static/assets/*",
        "!static/assets/**/*.{jpg,png,svg}",
        "static/images/*.gif"
      ],
      "dest": "dist/"
    }
  }
}
