
{
  "title": "buildit @ wipro digital",
  "description": "buildit@wiprodigital",
  "envs": {
    "local-dev": {
      "url": "http://localhost:8080",
      "excludeRobots": true
    },
    "beta": {
      "url": "https://www-beta.buildit.digital",
      "excludeRobots": true
    },
    "staging": {
      "url": "https://www-staging.buildit.digital",
      "excludeRobots": true
    },
    "production": {
      "url": "https://buildit.wiprodigital.com",
      "excludeRobots": false
    }
  },
  "paths": {
    "styles": {
      "src": [ "src/sass/**/*.scss" ],
      "dest": "dist/styles/"
    },
    "scripts": {
      "src": [ "src/scripts/**/*.js" ],
      "dest": "dist/scripts/"
    },
    "images": {
      "src": "static/images/",
      "dest": "dist/images/"
    },
    "pages": {
      "src": "pages/**/*",
      "dest": "dist/"
    },
    "templates": {
      "src": "templates/",
      "partials": "partials/"
    },
    "assets": {
      "src": [ "static/assets/*", "static/images/*.gif" ],
      "dest": "dist/"
    }
  }
}
