<section class="grav-c-hero">
  <img
    class="grav-c-hero__banner"
    alt="{{ image.alt }}"
    src="{{ image.src }}"
  />

  <div class="grav-c-hero__container">
    {% block heroContainer %}
      <h1>{{ title | safe }}</h1>
      <p>{{ description | safe }}</p>
    {% endblock %}
  </div>
</section>
