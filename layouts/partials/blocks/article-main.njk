<main>
  {% if blocks.hero %}
    <section class="grav-c-hero">
      {{ blocks.hero | safe }}
    </section>
  {% endif %}
  <section class="grav-o-container">
    {% if blocks.main %}
      {{ blocks.main | safe }}
    {% else %}
      {# Fall back to rendering contents #}
      {{ contents | safe }}
    {% endif %}
  </section>
  {% if next %}
    <section class="grav-o-container">
      <h4>Next story</h4>
      <a href="/{{ next.path }}">{{ next.title }}</a>
    </section>
  {% endif %}
</main>
