<section class="grav-c-hero">
  <img
    class="grav-c-hero__banner"
    src="images/hero.jpg"
    alt=""
  />

  <div class="grav-c-hero__container">
    <h1>
      We <strong>build brands</strong> for the digital world.
    </h1>
    <p>
      Welcome to our new Buildit website featuring stories by and about our technical <strong>people</strong> and teams.
      News from our <strong>community</strong>, and an easy way to search the entire range of relevant
      <strong>jobs</strong>
    </p>
  </div>
</section>

<section class="grav-o-container">
  <ul class="grav-c-list-cards-basic" typeof="schema:ItemList">
    {% for article in colArticles %}
      <li class="grav-c-card-basic" property="schema:itemListElement" typeof="schema:ListItem">
        <meta property="schema:position" content="{{ loop.index }}">
        <a href="/{{ article.path }}" property="schema:url">
          {% if article.image %}
            <img property="schema:image" src="{{ article.image.src }}" alt="{{ article.image.alt }}" />
            <svg role="img">
              <use xlink:href="#decoration-arrow-right"></use>
            </svg>
          {% endif %}
          <h3 property="schema:name">{{ article.title }}</h3>
        </a>
        <p property="schema:description">{{ article.description }}</p>
      </li>
    {% endfor %}
  </ul>
</section>

<section class="grav-c-callout grav-u-color-scheme-contrast">
  <div class="grav-c-callout__columns">
    <p><strong>We’re worldwide.</strong><br/>That’s right next to you.</p>
    <ul class="grav-c-three-column-list-justified">
      {% for location in colLocations %}
        <li>
          <a href="/locations/{{ location.citySlug }}/">
            {{ location.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
